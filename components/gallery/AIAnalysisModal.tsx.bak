'use client';
import { useState } from 'react';
import { CreativeWithAI } from '@/lib/aiAnalysisTypes';
import { Dialog, DialogContent, DialogHeader, DialogTitle } from "@/components/ui/dialog";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { 
  Play, 
  Pause, 
  Download, 
  Share2, 
  TrendingUp, 
  Eye, 
  Clock, 
  Target,
  Lightbulb,
  Users,
  BarChart3,
  Video,
  Wand2
} from "lucide-react";
import CardMedia from '@/components/gallery/CardMedia';
import { getPerformanceBadgeColor } from '@/lib/realAIAnalysisService';

interface AIAnalysisModalProps {
  creative: CreativeWithAI | null;
  open: boolean;
  onOpenChange: (open: boolean) => void;
}

export function AIAnalysisModal({ creative, open, onOpenChange }: AIAnalysisModalProps) {
  const [isPlaying, setIsPlaying] = useState(false);
  const [activeTab, setActiveTab] = useState('overview');

  if (!creative || !creative.aiAnalysis) return null;

  const { aiAnalysis } = creative;
  const badgeColor = getPerformanceBadgeColor(aiAnalysis.performanceAnalysis.tier);

  const handleExport = () => {
    const exportData = {
      creative: creative["Ad Name"],
      analysis: aiAnalysis,
      exportedAt: new Date().toISOString()
    };
    
    const dataStr = JSON.stringify(exportData, null, 2);
    const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
    
    const exportFileDefaultName = `ai-analysis-${creative["Ad Name"].replace(/[^a-z0-9]/gi, '_').toLowerCase()}.json`;
    
    const linkElement = document.createElement('a');
    linkElement.setAttribute('href', dataUri);
    linkElement.setAttribute('download', exportFileDefaultName);
    linkElement.click();
  };

  const handleShare = async () => {
    if (navigator.share) {
      try {
        await navigator.share({
          title: `AI Analysis: ${creative["Ad Name"]}`,
          text: aiAnalysis.rawStrategicSummary,
          url: window.location.href
        });
      } catch (err) {
        console.log('Error sharing:', err);
      }
    } else {
      // Fallback: copy to clipboard
      const shareText = `AI Analysis: ${creative["Ad Name"]}\\n\\n${aiAnalysis.rawStrategicSummary}`;
      navigator.clipboard.writeText(shareText);
    }
  };

  return (
    <Dialog open={open} onOpenChange={onOpenChange}>
      <DialogContent 
        className="max-w-7xl w-[95vw] h-[90vh] bg-gradient-to-br from-slate-900 to-slate-800 border-slate-700 p-0 flex flex-col"
        onOpenAutoFocus={(e) => e.preventDefault()}
      >
        {/* Header - Fixed height */}
        <DialogHeader className="border-b border-slate-700 p-6 flex-shrink-0">
          <div className="flex items-start justify-between">
            <div className="space-y-2">
              <DialogTitle className="text-2xl font-bold text-white flex items-center gap-3">
                <Wand2 className="h-6 w-6 text-blue-400" />
                AI Creative Analysis
              </DialogTitle>
              <div className="flex items-center gap-3">
                <h3 className="text-lg text-slate-200">{creative["Ad Name"]}</h3>
                <Badge className={`${badgeColor} text-white`}>
                  {aiAnalysis.performanceAnalysis.tier}
                </Badge>
                <Badge variant="outline" className="text-slate-300">
                  {Math.round(aiAnalysis.performanceAnalysis.confidenceScore * 100)}% Confidence
                </Badge>
              </div>
            </div>
            <div className="flex items-center gap-2">
              <Button variant="outline" size="sm" onClick={handleShare} className="border-slate-600">
                <Share2 className="h-4 w-4 mr-2" />
                Share
              </Button>
              <Button variant="outline" size="sm" onClick={handleExport} className="border-slate-600">
                <Download className="h-4 w-4 mr-2" />
                Export
              </Button>
            </div>
          </div>
        </DialogHeader>

        {/* Main Content - Scrollable */}
        <div className="flex-1 overflow-hidden p-6">
          <div className="grid grid-cols-1 lg:grid-cols-3 gap-6 h-full">
            {/* Left Column - Video & Performance - Fixed height */}
            <div className="space-y-4 h-fit">
              {/* Video Player */}
              <Card className="bg-slate-800/50 border-slate-700">
                <CardContent className="p-4">
                  <div className="relative">
                    <CardMedia creative={creative} showPlayButton={true} />
                  </div>
                </CardContent>
              </Card>

              {/* Performance Metrics */}
              <Card className="bg-gradient-to-br from-slate-800/60 to-slate-700/60 border-slate-600">
                <CardHeader className="pb-3">
                  <CardTitle className="text-sm font-medium text-slate-300 flex items-center gap-2">
                    <BarChart3 className="h-4 w-4" />
                    Performance Metrics
                  </CardTitle>
                </CardHeader>
                <CardContent className="space-y-3">
                  <div className="grid grid-cols-2 gap-3 text-sm">
                    <div className="p-3 bg-slate-700/50 rounded-lg">
                      <div className="text-slate-400">CTR</div>
                      <div className="text-xl font-bold text-white">{creative.CTR_pct?.toFixed(2)}%</div>
                    </div>
                    <div className="p-3 bg-slate-700/50 rounded-lg">
                      <div className="text-slate-400">Spend</div>
                      <div className="text-xl font-bold text-white">${creative.SPEND?.toLocaleString()}</div>
                    </div>
                    <div className="p-3 bg-slate-700/50 rounded-lg">
                      <div className="text-slate-400">CPC</div>
                      <div className="text-xl font-bold text-white">${creative.CPC?.toFixed(2)}</div>
                    </div>
                    <div className="p-3 bg-slate-700/50 rounded-lg">
                      <div className="text-slate-400">Impressions</div>
                      <div className="text-xl font-bold text-white">{creative.IMPRESSIONS?.toLocaleString()}</div>
                    </div>
                  </div>
                  
                  {/* Creative Dimensions */}
                  <div className="pt-3 border-t border-slate-600">
                    <div className="text-xs text-slate-400 mb-2">Creative Profile</div>
                    <div className="space-y-1 text-sm">
                      <div className="flex justify-between">
                        <span className="text-slate-400">Tone:</span>
                        <span className="text-white">{creative.tone}</span>
                      </div>
                      <div className="flex justify-between">
                        <span className="text-slate-400">Persona:</span>
                        <span className="text-white">{creative.persona}</span>
                      </div>
                      <div className="flex justify-between">
                        <span className="text-slate-400">Style:</span>
                        <span className="text-white">{creative.style}</span>
                      </div>
                    </div>
                  </div>
                </CardContent>
              </Card>
            </div>

            {/* Right Column - AI Analysis - Full height with proper scroll */}
            <div className="lg:col-span-2 flex flex-col h-full">
              <Tabs value={activeTab} onValueChange={setActiveTab} className="flex flex-col h-full">
                {/* Tabs Header - Fixed */}
                <TabsList className="grid w-full grid-cols-3 bg-slate-800 border-slate-700 flex-shrink-0 mb-4">
                  <TabsTrigger value="overview" className="data-[state=active]:bg-slate-700">
                    📊 Strategic Summary
                  </TabsTrigger>
                  <TabsTrigger value="description" className="data-[state=active]:bg-slate-700">
                    🎬 Description
                  </TabsTrigger>
                  <TabsTrigger value="scenes" className="data-[state=active]:bg-slate-700">
                    🎭 Scene Breakdown
                  </TabsTrigger>
                </TabsList>

                {/* Tabs Content - Scrollable */}
                <div className="flex-1 overflow-y-auto pr-2">
                  <TabsContent value="overview" className="space-y-4 mt-0 pb-6">
                    <Card className="bg-slate-800/30 border-slate-700">
                      <CardHeader>
                        <CardTitle className="text-lg text-white flex items-center gap-2">
                          <Eye className="h-5 w-5 text-blue-400" />
                          Strategic Analysis Overview
                        </CardTitle>
                      </CardHeader>
                      <CardContent>
                        <div className="prose prose-slate prose-invert max-w-none">
                          <div className="whitespace-pre-wrap text-slate-200 leading-relaxed text-sm">
                            {aiAnalysis.rawStrategicSummary || 'No strategic analysis available'}
                          </div>
                        </div>
                      </CardContent>
                    </Card>

                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <Card className="bg-emerald-900/20 border-emerald-700/50">
                        <CardHeader>
                          <CardTitle className="text-sm text-emerald-300 flex items-center gap-2">
                            <TrendingUp className="h-4 w-4" />
                            Strengths & Gaps
                          </CardTitle>
                        </CardHeader>
                        <CardContent>
                          <p className="text-sm text-slate-200 leading-relaxed">
                            {aiAnalysis.parsedSummary.strengthsAndGaps}
                          </p>
                        </CardContent>
                      </Card>

                      <Card className="bg-blue-900/20 border-blue-700/50">
                        <CardHeader>
                          <CardTitle className="text-sm text-blue-300 flex items-center gap-2">
                            <Users className="h-4 w-4" />
